<h2 class="contact-us">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form">

  <div class="field">
    <p style="margin: 15px 0 5px 0; text-transform: capitalize; font-size: 18px;"><%= :email %><br /></p>
    <div><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "field__input" %></div>
  </div>

  <div class="field">
    <p style="margin: 15px 0 5px 0; text-transform: capitalize; font-size: 18px;"><%= :password %><br /></p>
    <div><%= f.password_field :password, autocomplete: "current-password",class: "field__input" %></div>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
   
   <% end %>
   </div>

   <div class="actions text-center">
    <%= f.submit "Log in",class: "btn--cta" %>
  </div>
<% end %>

<p style="padding: 40px;" class="center"><%= render "devise/shared/links" %></p>
</div>



